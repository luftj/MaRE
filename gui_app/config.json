{
    "proj_map": {
        "default": "+proj=longlat +ellps=bessel +towgs84=598.1,73.7,418.2,0.202,0.045,-2.455,6.7 +no_defs"
    },
    "process_image_width": {
        "default": 2000
    },
    "segmentation_steps": {
        "default": [
            ["convert","hsv"],
            ["threshold",[[90, 10, 70],[128, 255, 255]]],
            ["close",5]
        ]
    },
    "resizing_input": {
        "description": "area looks good for downscaling, cubic looks good or upscaling",
        "possible_values": ["INTER_AREA", "INTER_LINEAR", "INTER_CUBIC"],
        "default": "INTER_AREA"
    },
    "resizing_index_query": {
        "possible_values": ["INTER_AREA", "INTER_LINEAR", "INTER_CUBIC"],
        "default": "INTER_AREA"
    },
    "resizing_register_query": {
        "possible_values": ["INTER_AREA", "INTER_LINEAR", "INTER_CUBIC"],
        "default": "INTER_LINEAR"
    },
    "resizing_register_reference": {
        "possible_values": ["INTER_AREA", "INTER_LINEAR", "INTER_CUBIC"],
        "default": "INTER_CUBIC"
    },
    
    "index_img_width_query" : {
        "description": "should fit to reference image width",
        "default": 2000
    },
    "index_n_descriptors_query": {
        "default": 500
    },
    "index_k_nearest_neighbours": {
        "default": 50
    },
    "index_voting_scheme": {
        "possible_values": ["antiprop"],
        "default": "antiprop"
    },
    "index_lowes_test_ratio": {
        "default": 0
    },
    "ransac_max_trials": {
        "default": 1000
    },
    "ransac_stop_probability": {
        "default": 0.99
    },
    "ransac_random_state": {
        "default": 1337
    },
    "early_terminaten_heuristic": {
        "default": false
    },
    "skip_impossible_verification": {
        "default": true
    },
    "codebook_response_threshold": {
        "description": "2 # maybe even 1.8 #set to None to disable",
        "default": 0
    },
    "matching_norm": {
        "possible_values": ["NORM_INF", "NORM_L1", "NORM_L2", "NORM_L2SQR", "NORM_HAMMING", "NORM_RELATIVE", "NORM_MINMAX"],
        "default": "NORM_L2"
    },
    "matching_crosscheck": {
        "default": true
    },
    "warp_mode_retrieval": {
        "possible_values": ["similarity","affine"],
        "default": "similarity"
    },
    "warp_mode_registration": {
        "possible_values": ["euclidean","affine","homography"],
        "default": "affine" 
    },
    "registration_mode": {
        "possible_values": ["ransac","ecc","both"],
        "default": "both"
    },
    "registration_ecc_iterations": {
        "description": "maximum number of ECC iterations",
        "default": 500
    },
    "registration_ecc_eps": {
        "description": "termination threshold of the increment in the correlation coefficient between two iterations",
        "default": 1e-4
    },
    "output_file_ending": {
        "description": "without dot . for georeferenced map",
        "default": "jp2"
    },    
    "jpg_compression": {
        "description": "for aligned (not georeferenced) map image",
        "default": 95
    }
}
